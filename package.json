    "mongoose-paginate-v2": "^1.9.0",
    "mongoose-schema-jsonschema": "^3.0.2",
    "node-fetch": "^2.7.0",
    "path": "^0.12.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "url": "^0.11.4",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
